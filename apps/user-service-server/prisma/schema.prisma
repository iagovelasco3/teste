datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  bio            String?
  createdAt      DateTime @default(now())
  id             String   @id @default(cuid())
  profilePicture Json?
  updatedAt      DateTime @updatedAt
  user           User?    @relation(fields: [userId], references: [id])
  userId         String?
}

model User {
  bio            String?
  createdAt      DateTime  @default(now())
  email          String?
  id             String    @id @default(cuid())
  password       String?
  profilePicture Json?
  profiles       Profile[]
  updatedAt      DateTime  @updatedAt
  username       String?
}
